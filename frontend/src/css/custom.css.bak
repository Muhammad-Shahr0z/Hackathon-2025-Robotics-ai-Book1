/**
 * Physical AI Robotics Textbook - Global Styles
 * Customized theme for robotics education with dark/light mode support
 */

/* Import Inter font from Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

@import './homepage.css';
@import './docs-ui.css';

/* Modern Blue & White Theme */
:root {
  /* Primary Blue Theme - Updated for futuristic tech theme */
  --ifm-color-primary: #0066CC;
  --ifm-color-primary-dark: #0055AA;
  --ifm-color-primary-darker: #004499;
  --ifm-color-primary-darkest: #003377;
  --ifm-color-primary-light: #0099FF;
  --ifm-color-primary-lighter: #33AAFF;
  --ifm-color-primary-lightest: #66CCFF;

  /* Light Background */
  --ifm-background-color: #ffffff;
  --ifm-background-surface-color: #f8fafc;

  /* Text Colors */
  --ifm-font-color-base: #1a1a1a;
  --ifm-font-color-secondary: #64748b;

  /* Code */
  --ifm-code-font-size: 0.875rem;
  --docusaurus-highlighted-code-line-bg: rgba(0, 102, 204, 0.1);

  /* Borders */
  --ifm-color-emphasis-200: #e2e8f0;
  --ifm-color-emphasis-300: #cbd5e1;

  /* Sidebar */
  --ifm-menu-color: #4a5568;
  --ifm-menu-color-active: #0066CC;
  --ifm-menu-color-background-active: transparent;
  --doc-sidebar-width: 280px;

  /* TOC */
  --ifm-toc-border-color: transparent;
  --ifm-toc-link-color: #4a5568;

  /* =============================
  /* DESIGN TOKENS - Futuristic Tech Theme */
  /* ============================= */

  /* Primary Colors */
  --color-primary-500: #0066CC;
  --color-primary-600: #0099FF;

  /* Secondary Colors */
  --color-secondary-500: #6600CC;
  --color-secondary-600: #9966FF;

  /* Accent Colors */
  --color-accent-500: #00FFFF;
  --color-accent-600: #CC66FF;

  /* Status Colors */
  --color-success: #00CC66;
  --color-warning: #FF9900;
  --color-error: #FF3333;

  /* Background Colors */
  --color-background-default: #FFFFFF;
  --color-background-surface: #F8F9FA;

  /* Text Colors */
  --color-text-primary: #1A1A1A;
  --color-text-secondary: #4A4A4A;

  /* Typography */
  --font-family: 'Inter', 'Roboto', system-ui, -apple-system, sans-serif;
  --font-size-h1: 32px;
  --font-size-h2: 24px;
  --font-size-h3: 20px;
  --font-size-body: 16px;
  --font-size-small: 14px;
  --font-weight-bold: 700;
  --font-weight-regular: 400;

  /* Spacing Scale */
  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 12px;
  --spacing-base: 16px;
  --spacing-lg: 24px;
  --spacing-xl: 32px;
  --spacing-xxl: 48px;
  --spacing-xxxl: 64px;

  /* Border Radius */
  --border-radius-sm: 4px;
  --border-radius-md: 8px;
  --border-radius-lg: 12px;
  --border-radius-pill: 9999px;

  /* Shadows */
  --shadow-subtle: 0 1px 2px rgba(0, 0, 0, 0.05);
  --shadow-medium: 0 4px 8px rgba(0, 0, 0, 0.1);
  --shadow-elevated: 0 8px 16px rgba(0, 0, 0, 0.15);
}

/* Dark mode override (if needed) */
[data-theme='dark'] {
  --ifm-color-primary: #0099FF;
  --ifm-color-primary-dark: #0077CC;
  --ifm-color-primary-darker: #0055AA;
  --ifm-color-primary-darkest: #003377;
  --ifm-color-primary-light: #33AAFF;
  --ifm-color-primary-lighter: #66CCFF;
  --ifm-color-primary-lightest: #99DDFF;

  --ifm-background-color: #0f172a;
  --ifm-background-surface-color: #1e293b;
  --ifm-font-color-base: #f1f5f9;
  --ifm-font-color-secondary: #94a3b8;
}

/* ============================================
   Modern Navbar Styling
   ============================================ */

.navbar {
  background: #ffffff !important;
  border-bottom: 1px solid #e5e7eb !important;
  box-shadow: 0 4px 18px rgba(16,24,40,0.06) !important;
  padding: 0.5rem 1rem !important;
  display: flex !important;
  align-items: center !important;
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  width: 100% !important;
  height: 64px !important;
  z-index: 9999 !important;
}

.navbar__title {
  font-weight: 700 !important;
  color: #1a1a1a !important;
  font-size: 1.25rem !important;
  line-height: 1 !important;
}

.navbar__link {
  color: #64748b !important;
  font-weight: 500 !important;
}

.navbar__link:hover {
  color: var(--ifm-color-primary) !important;
}

.navbar__brand {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
}
.navbar__inner {
  align-items: center !important;
}

/* Reserve space so page content isn't hidden under fixed navbar */
.main-wrapper,
.docMainContainer,
.theme-doc-markdown {
  padding-top: 72px !important;
}

.navbar__items {
  display: flex !important;
  align-items: center !important;
}

.navbar__item {
  padding: 0.25rem 0.5rem !important;
}

/* Space out GitHub link and auth button in the navbar */
.navbar__items a[href*="github.com"] {
  margin-left: 0.5rem !important;
  margin-right: 0.5rem !important;
  display: inline-flex !important;
  align-items: center !important;
}

.navbar__items .authButton {
  margin-left: 0.5rem !important;
  margin-right: 0.25rem !important;
}

.navbar__link {
  padding: 0.25rem 0.4rem !important;
}

.navbar__title {
  margin-left: 6px !important;
}
.footer {
  background: #2563EB !important;
  border-top: none !important;
  padding: 3rem 0 !important;
}

 

.footer__title {
  color: #ffffff !important;
  font-weight: 600 !important;
  font-size: 0.875rem !important;
  text-transform: uppercase !important;
  letter-spacing: 0.05em !important;
  margin-bottom: 1rem !important;
}

.footer__item {
  color: #dbeafe !important;
  font-size: 0.875rem !important;
  line-height: 2 !important;
}

.footer__link-item {
  color: #dbeafe !important;
  transition: color 0.2s ease !important;
}

.footer__link-item:hover {
  color: var(--color-accent-500) !important;
  text-decoration: none !important;
}

.footer__copyright {
  color: #bfdbfe !important;
  font-size: 0.875rem !important;
  margin-top: 2rem !important;
  padding-top: 2rem !important;
  border-top: 1px solid rgba(255, 255, 255, 0.2) !important;
}

/* ============================================
   Auth Modal Modern Styling
   ============================================ */

.modal {
  backdrop-filter: blur(4px);
}

.modal .content {
  border-radius: 16px !important;
  border: 1px solid #e2e8f0 !important;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04) !important;
}

.modal h2 {
  color: #1a1a1a !important;
  font-weight: 700 !important;
  font-size: 1.5rem !important;
}

.modal .formGroup label {
  color: #475569 !important;
  font-weight: 500 !important;
  font-size: 0.875rem !important;
}

.modal .formGroup input {
  border: 1px solid #e2e8f0 !important;
  border-radius: 8px !important;
  padding: 0.75rem !important;
  font-size: 0.9375rem !important;
}

.modal .formGroup input:focus {
  border-color: #2563eb !important;
  outline: none !important;
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1) !important;
}

.modal .submitBtn {
  background: #2563eb !important;
  border: none !important;
  border-radius: 8px !important;
  padding: 0.75rem 1.5rem !important;
  font-weight: 600 !important;
  font-size: 0.9375rem !important;
}

.modal .submitBtn:hover {
  background: var(--ifm-color-primary-dark) !important;
}

.modal .signOutBtn {
  background: #ef4444 !important;
  border: none !important;
  border-radius: 8px !important;
  padding: 0.75rem 1.5rem !important;
  font-weight: 600 !important;
}

.modal .signOutBtn:hover {
  background: var(--color-error) !important;
}

.modal .toggleBtn {
  color: var(--ifm-color-primary) !important;
  font-weight: 600 !important;
  background: none !important;
  border: none !important;
  cursor: pointer !important;
}

.modal .toggleBtn:hover {
  text-decoration: underline !important;
}

.modal .message {
  border-radius: 8px !important;
  padding: 0.75rem 1rem !important;
  font-size: 0.875rem !important;
  font-weight: 500 !important;
}

.modal .message.success {
  background: #dcfce7 !important;
  color: #166534 !important;
  border: 1px solid #bbf7d0 !important;
}

.modal .message.error {
  background: #fee2e2 !important;
  color: #991b1b !important;
  border: 1px solid #fecaca !important;
}

/* ============================================
   Chat Widget - Remove Black Background
   ============================================ */

/* Remove black background from closed chat widget */
[class*="chatWidget"][class*="closed"] {
  background: transparent !important;
  border: none !important;
  box-shadow: none !important;
}

/* ============================================
   Documentation Pages - Modern Blue Theme
   ============================================ */

/* Force light theme on all pages */
html {
  background: #ffffff !important;
}

body {
  background: #ffffff !important;
  color: #1a1a1a !important;
}

/* Main documentation container */
.theme-doc-markdown {
  --ifm-heading-color: #1a1a1a;
  --ifm-link-color: #2563eb;
  --ifm-link-hover-color: #1d4ed8;
  background: #ffffff !important;
}

/* Main wrapper */
.main-wrapper {
  background: #ffffff !important;
}

/* Doc page */
.docMainContainer {
  background: #ffffff !important;
}

article {
  background: #ffffff !important;
}

/* Documentation headings */
.markdown h1 {
  color: #1a1a1a !important;
  font-weight: 700 !important;
  border-bottom: none !important;
  padding-bottom: 0 !important;
  margin-bottom: 1.5rem !important;
}

.markdown h2 {
  color: #1a1a1a !important;
  font-weight: 700 !important;
  margin-top: 2rem !important;
  margin-bottom: 1rem !important;
  padding-bottom: 0.375rem !important;
  border-bottom: 1px solid #e5e7eb !important;
}

.markdown h3 {
  color: #1a1a1a !important;
  font-weight: 700 !important;
  margin-top: 1.5rem !important;
  margin-bottom: 0.75rem !important;
}

.markdown h4,
.markdown h5,
.markdown h6 {
  font-weight: 700 !important;
}

/* Links */
.markdown a {
  color: var(--ifm-color-primary) !important;
  text-decoration: none !important;
  border-bottom: 1px solid transparent !important;
  transition: all 0.2s ease !important;
}

.markdown a:hover {
  color: var(--ifm-color-primary-dark) !important;
  border-bottom-color: var(--ifm-color-primary) !important;
}

/* Code blocks */
.markdown pre {
  background: #f8fafc !important;
  border: 1px solid #e2e8f0 !important;
  border-radius: 8px !important;
  margin: 1rem 0 !important;
}

.markdown code {
  background: #f1f5f9 !important;
  color: #1e293b !important;
  padding: 0.2rem 0.4rem !important;
  border-radius: 4px !important;
  font-size: 0.875em !important;
  border: 1px solid #e2e8f0 !important;
}

.markdown pre code {
  background: transparent !important;
  border: none !important;
  padding: 0 !important;
}

/* Blockquotes */
.markdown blockquote {
  border-left: 4px solid #2563eb !important;
  background: #f8fafc !important;
  padding: 1rem 1.5rem !important;
  margin: 1.5rem 0 !important;
  border-radius: 0 8px 8px 0 !important;
}

/* Tables */
.markdown table {
  border: 1px solid #e2e8f0 !important;
  border-radius: 8px !important;
  overflow: hidden !important;
}

.markdown th {
  background: #2563eb !important;
  color: white !important;
  font-weight: 600 !important;
  padding: 0.75rem 1rem !important;
}

.markdown td {
  padding: 0.75rem 1rem !important;
  border-top: 1px solid #e2e8f0 !important;
}

.markdown tr:hover {
  background: var(--ifm-background-surface-color) !important;
}

/* Admonitions (tips, warnings, etc.) */
.theme-admonition {
  border-radius: 8px !important;
  border-left-width: 4px !important;
  margin: 1.5rem 0 !important;
}

.theme-admonition-note {
  border-left-color: #2563eb !important;
  background: #eff6ff !important;
}

.theme-admonition-tip {
  border-left-color: #10b981 !important;
  background: #f0fdf4 !important;
}

.theme-admonition-warning {
  border-left-color: #f59e0b !important;
  background: #fffbeb !important;
}

.theme-admonition-danger {
  border-left-color: #ef4444 !important;
  background: #fef2f2 !important;
}

/* Sidebar - White Background, Fixed Position */
.theme-doc-sidebar-container {
  border-right: 1px solid #e5e7eb !important;
  background: #ffffff !important;
  position: sticky !important;
  top: 0 !important;
  height: 100vh !important;
  overflow-y: auto !important;
  scrollbar-width: none !important; /* Firefox */
  -ms-overflow-style: none !important; /* IE and Edge */
}

.theme-doc-sidebar-container::-webkit-scrollbar {
  display: none !important; /* Chrome, Safari, Opera */
}

aside[class*="sidebar"] {
  background: #ffffff !important;
  overflow-y: auto !important;
  scrollbar-width: none !important;
  -ms-overflow-style: none !important;
}

aside[class*="sidebar"]::-webkit-scrollbar {
  display: none !important;
}

.menu {
  background: transparent !important;
  padding: 0.5rem 0.5rem !important;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif !important;
}

.menu__link {
  color: #4a5568 !important;
  border-radius: 0 !important;
  transition: all 0.15s ease !important;
  padding: 0.4rem 0.75rem !important;
  font-size: 0.9rem !important;
  font-weight: 700 !important;
  line-height: 1.3 !important;
}

.menu__link:hover {
  background: var(--ifm-background-surface-color) !important;
  color: var(--ifm-color-primary) !important;
}

.menu__link--active {
  background: var(--color-background-surface) !important;
  color: var(--ifm-color-primary) !important;
  font-weight: 700 !important;
  border-left: 3px solid var(--ifm-color-primary) !important;
  border-radius: 4px !important;
  padding-left: calc(1rem - 3px) !important;
}

.menu__list-item-collapsible {
  background: transparent !important;
}

.menu__list-item-collapsible > .menu__link {
  font-weight: 700 !important;
  color: #1f2937 !important;
  font-size: 0.9rem !important;
}

/* Reduce spacing between menu items */
.menu__list-item {
  margin-top: 0.15rem !important;
  margin-bottom: 0.15rem !important;
}

/* Reduce spacing for nested items */
.menu__list .menu__list {
  margin-top: 0.25rem !important;
  padding-left: 0.75rem !important;
}

.menu__caret {
  color: #6b7280 !important;
}

.menu__list {
  background: transparent !important;
}

/* Hide all scrollbars in sidebar */
.theme-doc-sidebar-container nav,
.menu,
.menu__list,
[class*="sidebar"] {
  scrollbar-width: none !important;
  -ms-overflow-style: none !important;
}

.theme-doc-sidebar-container nav::-webkit-scrollbar,
.menu::-webkit-scrollbar,
.menu__list::-webkit-scrollbar,
[class*="sidebar"]::-webkit-scrollbar {
  display: none !important;
  width: 0 !important;
  height: 0 !important;
}

/* Pagination */
.pagination-nav__link {
  border: 1px solid #e2e8f0 !important;
  border-radius: 8px !important;
  transition: all 0.2s ease !important;
}

.pagination-nav__link:hover {
  border-color: var(--ifm-color-primary) !important;
  background: var(--color-background-surface) !important;
}

.pagination-nav__label {
  color: var(--ifm-color-primary) !important;
  font-weight: 600 !important;
}

/* Ensure Chat Widget is visible */
[class*="chatWidget"] {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  z-index: 9999 !important;
}

/* Table of contents - Ensure it's visible and styled */
.theme-doc-toc-desktop {
  display: block !important;
  visibility: visible !important;
}

.table-of-contents {
  border-left: 1px solid #e5e7eb !important;
  padding-left: 1rem !important;
}

.table-of-contents__link {
  color: #6b7280 !important;
  font-size: 0.875rem !important;
  padding: 0.4rem 0.5rem !important;
  display: block !important;
  border-left: 2px solid transparent !important;
  margin-left: -2px !important;
}

.table-of-contents__link:hover {
  color: var(--ifm-color-primary) !important;
  border-left-color: var(--ifm-color-primary-light) !important;
}

.table-of-contents__link--active {
  color: var(--ifm-color-primary) !important;
  font-weight: 600 !important;
  border-left-color: var(--ifm-color-primary) !important;
}
